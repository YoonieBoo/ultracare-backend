generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Alert {
  id         Int      @id @default(autoincrement())
  elderly    String
  room       String
  type       String
  confidence Float
  status     String   @default("New")
  time       String
  createdAt  DateTime @default(now())

  mediaUrl String?
  source   String?

  acknowledgedAt DateTime?
  resolvedAt     DateTime?

  residentId Int?
  resident   Resident? @relation(fields: [residentId], references: [id], onDelete: SetNull)
}

model Device {
  id         Int      @id @default(autoincrement())
  deviceId   String   @unique
  name       String?
  room       String?
  lastSeenAt DateTime?
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())

  residents  Resident[]   // add this line
}

model Resident {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  room      String?
  createdAt DateTime @default(now())

  deviceId  Int?     @unique
  device    Device?  @relation(fields: [deviceId], references: [id])

  alerts    Alert[]
}

model PushToken {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  platform  String   @default("ios")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


